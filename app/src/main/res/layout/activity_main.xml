<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kasteel"
    tools:context="com.example.jingleski.smartlapp.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/startAdmin"
        android:layout_width="88dp"
        android:layout_height="58dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:onClick="sendMessageAdmin"
        android:background="@drawable/admin"
        app:layout_constraintLeft_toRightOf="@+id/schatkist"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/schatkist"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/schatkist"
        android:onClick="sendMessageSchatkist"
        app:layout_constraintBaseline_toBaselineOf="@+id/startAdmin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/startAdmin" />


    <Button
        android:id="@+id/startLaura"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/laura"
        android:contentDescription="@string/start_Laura"
        android:onClick="sendMessageLaura"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/startRiene"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startRiene"
        android:layout_width="50dp"
        android:layout_height="59dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="244dp"
        android:background="@drawable/riene"
        android:contentDescription="@string/start_Riene"
        android:onClick="sendMessageRiene"
        app:layout_constraintLeft_toRightOf="@+id/startLaura"
        app:layout_constraintRight_toLeftOf="@+id/startMarie"
        app:layout_constraintTop_toTopOf="parent" />

       <Button
           android:id="@+id/startMarie"
           android:layout_width="66dp"
           android:layout_height="66dp"
           android:layout_marginLeft="24dp"
           android:layout_marginRight="0dp"
           android:layout_marginTop="280dp"
           android:background="@drawable/marie"
           android:contentDescription="@string/start_Marie"
           android:onClick="sendMessageMarie"
           app:layout_constraintLeft_toRightOf="@+id/startRiene"
           app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
